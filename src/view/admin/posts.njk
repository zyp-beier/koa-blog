{% extends "layout/block.njk" %}

{% block body %}
{% for post in list %}
    <div>{{loop.index}}<a href="/admin/posts/{{post.id}}">{{post.title}}</a></div>
<div>{{post.content}}</div>
    <div><a href="/admin/posts/remove/?id={{post.id}}">删除</a></div>
<div><a href="/item/?id={{post.id}}">查看</a></div>
{% endfor %}

<div>
    <div>
        <form action="/admin/posts/create" method="post">
            <label for="title">
                标题
                <input type="text" name="title" id="title">
            </label>
            <label for="content">
                内容
                <textarea id="content" name="content"></textarea>
            </label>
            <button type="submit">保存</button>
            <button type="reset">重置</button>
        </form>
    </div>
</div>
{% endblock %}